<a href='javascript:void(0)' {{action 'showCart'}}>Cart ({{cartItems.length}})</a>

{{#if viewCart}}
  {{#each processedCart.cartItems as |cartItem|}}
    <div>
      {{cartItem.title}} - {{cartItem.quantity}} @ {{cartItem.cost}} - ${{cartItem.itemTotalCost}}
    </div>
  {{/each}}

  {{#if processedCart.total}}
    <div>
      <b>Total cost is ${{processedCart.total}}</b>
    </div>

    <div>
      <button {{action 'purchaseCart'}}>Buy it!</button>
    </div>
  {{/if}}
{{/if}}